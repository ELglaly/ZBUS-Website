@using zBus.GLobal

<ul class="navbar-nav">
    @if (GlobalVariables.Login_Status) // Removed unnecessary @ symbol and extra parenthesis
    {
        <li class="nav-item"><a class="nav-link" id="register" asp-action="Account" asp-controller="User">@GlobalVariables.User!.Split('@')[0]</a></li>
        <li class="nav-item"><a class="nav-link" style="text-decoration:solid;text-decoration-line:" id="login" asp-action="Logout" asp-controller="User">Logout</a></li>

    }
    else
    {
        <li class="nav-item"><a class="nav-link" id="register" asp-action="Register" asp-controller="User">Register</a></li>
        <li class="nav-item"><a class="nav-link" id="login" asp-action="Login_Page" asp-controller="User">Login</a></li>
        
    }
</ul>
