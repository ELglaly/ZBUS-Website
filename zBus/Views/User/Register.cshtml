@model User;
@{
    Layout = null;

}
<head>
    <link rel="stylesheet" href="/assets3/css/style.min.css">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    
    <style>
        .formwarn {
            color: red;
            font-size: 13px;
        }

        img {
            width: 180px;
            height: 180px;
            border-radius: 50%;
            justify-content: center !important;
            display:flex
        }

        .upload {
            
            width: 150;
            background: #e3362c;
            color: #fff;
            padding: 12px;
            border-radius: 5px;
            cursor: pointer;
            justify-content:center !important;
           
      
        }

        }

        span.formwarn {
            color: red !important;
            font-size: 13px;
        }

        danger {
            color: red !important;
            font-size: 13px;
        }

        .container {
            display: flex;
            justify-content: center;
        }

        .form-container {
            width: 50%; /* Adjust the width as needed */
        }

        .photo-container {
            justify-content: center;
            /* Adjust the margin as needed */
        }

        .layer video {
            position: absolute;
            top: 50%;
            left: 50%;
            width: 100%;
            height: 100%;
            object-fit: cover;
            transform: translate(-50%, -50%);
            z-index: -1;
        }
    </style>
</head>
<body>


    <div class="layer">
        
        
    </div>
    <main class="page-center">

        <form class="sign-up-form form" asp-action="Register_Save" asp-controller="User" method="post" enctype="multipart/form-data">
            
            <div class="container">

              
                <div class="photo-container" style="justify-content:center">
                   

                    <div class="form-label-wrapper" style="display:block;justify-content:center">
                        <input style="visibility:hidden" asp-for="PhotoPhath" />
                       
                        <img id="image" src="~/imgs/adddriver.jpg"  alt="No Photo"/>
                       
                        <input type="file" accept="image/jpeg, image/png, image/jpg" id="photo" name="photo" class="form-input" required onchange="displaySelectedImage(this);" style="display:none" />
                        <br />
                        <span id="photo_valid" class="formwarn" style="color:red !important;text-align:center;margin:15px"></span>
                        <span asp-validation-for="PhotoPhath" class="formwarn" id="PhotoPhath_asp" style="color:red;display:block;padding-bottom:20px;padding-left:40px"></span>

                        <span id="photo_" class="formwarn" style="color:red !important;text-align:center;margin:15px"></span>
                       
                        <label class="upload" for="photo">Uplaod Image</label>
                       
                    </div>
                   
                </div>
               
                <div class="form-container">
                    <article class="sign-up">
                        <h1 class="sign-up__title">Get started</h1>

                        <div style="display:flex">

                            <div class="form-label-wrapper" style="width:50%">
                                <label asp-for="Fisrt_name" class="text-black" style="margin:5px; color:white;">First Name<span class="formwarn">*</span></label>
                                <input asp-for="Fisrt_name" style="margin:5px; color:white;" class="form-input" oninput="this.value = this.value.trim()" />
                                <span asp-validation-for="Fisrt_name" class="formwarn"></span>
                            </div>
                            <div class="form-label-wrapper" style="width:50%">
                                <label asp-for="Last_name" class="text-black" style="margin:5px; color:white;">Last Name<span class="formwarn">*</span></label>
                                <input asp-for="Last_name" style="margin:5px; color:white;" class="form-input" oninput="this.value = this.value.trim()" />
                                <span asp-validation-for="Last_name" class="formwarn"></span>
                            </div>

                       </div>
                       

                        <div class="form-label-wrapper">
                            <label asp-for="Email" style="margin:5px ;color:white" class="text-black">Email<span class="formwarn">*</span></label>
                            <input asp-for="Email" style="margin:5px ;color:white" class="form-input" oninput="this.value = this.value.trim()" />
                            <span asp-validation-for="Email" class="formwarn"></span>
                        </div>


                        <div style="display:flex">

                            <div class="form-label-wrapper" style="width:50%">
                                    <label asp-for="Phone_number" style="margin:5px ;color:white" class="text-black">Phone Number<span class="formwarn">*</span></label>
                                    <input asp-for="Phone_number" style="margin:5px ;color:white" class="form-input" oninput="this.value = this.value.trim()" />
                                    <span asp-validation-for="Phone_number" class="formwarn"></span>
                             </div>
                            <div class="form-label-wrapper" style="width:50%">
                                    <label class="form-label">Role<span style="color:red">*</span></label>
                                    <select asp-for="Admin" class="form-input" required>
                                        <option value="">Select</option>
                                        <option value="true">Admin</option>
                                        <option value="false">Customer</option>
                                    </select>
                                    <span asp-validation-for="Admin" style="color:red"></span>
                                </div>

                        </div>
                        

                        <div class="form-label-wrapper">
                            <label asp-for="Address" style="margin:5px ;color:white" class="text-black">Address</label>
                            <input asp-for="Address" style="margin:5px ;color:white" class="form-input" oninput="this.value = this.value.trim()" />
                            <span asp-validation-for="Address" class="formwarn"></span>
                        </div>

                        <div class="form-label-wrapper">
                            <label asp-for="Password" style="margin:5px ;color:white" class="text-black">Password<span class="formwarn">*</span></label>
                            <input asp-for="Password" style="margin:5px ;color:white" id="password" class="form-input" oninput="this.value = this.value.trim()" />
                            <span asp-validation-for="Password" class="formwarn"></span>
                        </div>

                        <div class="form-label-wrapper">
                            <label class="text-black" style="margin:5px ;color:white">Confirm Password<span class="formwarn">*</span></label>
                            <input id="confirmPassword" style="margin:5px ;color:white" class="form-input" onchange="ConfirmPassword()" type="password" oninput="this.value = this.value.trim()" />
                            <span asp-validation-for="Password" class="formwarn"></span>
                            <span id="confirmPassword_error" class="formwarn"></span>
                        </div>

                        <div>
                            <span asp-validation-summary="User" class="formwarn"></span>
                        </div>
                        <br />

                        
                        <button type="submit" class="form-btn primary-default-btn transparent-btn">Create Account</button>
        

                  </article>
              </div>
        </div>
        </form>
    </main>

    <!-- Chart library -->
    <script src="~/assets3/plugins/chart.min.js"></script>
    <!-- Icons library -->
    <script src="~/assets3/plugins/feather.min.js"></script>
    <!-- Custom scripts -->
    <script src="~/assets3/js/script.js"></script>


    <script src="~/lib/jquery/dist/jquery.js">  </script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js">  </script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>

    <script>
        function ConfirmPassword() {
            var pass1 = document.getElementById("password").value;
            var pass2 = document.getElementById("confirmPassword").value;

            if (pass1 !== pass2) {
                document.getElementById("confirmPassword_error").innerHTML = "Passwords do not match";
                console.log("skcnsjc")
            } else {
                document.getElementById("confirmPassword_error").innerHTML = "";
            }
        }

        function displaySelectedImage(input) {
            if (input.files && input.files[0]) {
                var filename = input.files[0].name;
                document.getElementById('PhotoPhath').value = filename;
                document.getElementById('PhotoPhath_asp').innerHTML = '';
                document.getElementById('image').src = URL.createObjectURL(input.files[0]);
                let flag = document.getElementById('PhotoPhath').value;
                console.log(flag)
                // Check if the string ends with ".jpg", ".png", or ".jpeg" (case-insensitive)
                if ((filename.toLowerCase().endsWith(".jpg") || filename.toLowerCase().endsWith(".png") || filename.toLowerCase().endsWith(".jpeg")) && flag != '') {
                    document.getElementById("photo_valid").innerHTML = "";
                    console.log(filename.toLowerCase().endsWith(".jpg"))

                } else {
                    //console.log("You must Upload an Image");
                    let out = filename.split('.').pop().toLowerCase()
                    document.getElementById("photo_valid").innerHTML = `You uploaded ${out} You must upload  (.jpg - .png - .jpeg) format`;
                }

            }
        }
    </script>



</body>
