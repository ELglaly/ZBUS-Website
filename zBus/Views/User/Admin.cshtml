    <script>

        var chartData = {
            labels: ['January', 'February', 'March', 'April', 'May', 'June', 'July'],
            datasets: [{
                label: 'Site Users',
                data: [100, 150, 200, 250, 300, 350, 400],
                
               
            }]
        };

        // Get the canvas element
        var ctx = document.getElementById('myChart').getContext('2d');

        // Create the chart
        var myChart = new Chart(ctx, {
            type: 'line',
            data: chartData
        });


        function loadPartialViewBtn(id) {
            let path = "/User/Dashboard";
            if (id == 0) {

                path = "/User/Dashboard";
            }
            else if (id == 1) { path = "/Bus/Details"; }
            else if (id == 2) { path = "/Driver/Index"; }
            else if (id == 3) { path = "/Station/Index"; }
            else if (id == 4) { path = "/Trip/Index"; }
            $.ajax({
                url: path,
                type: "Get",
                success: function (response) {
                    $("#partialViewContainer").html(response); // Update the container with the partial view
                },
                error: function (error) {
                    console.error("Error:", error);
                }
            });
        }

        function search() {

            var query = $('#search').val();
            $.ajax({
                url: "/Bus/search",
                type: "Get",
                data: { query: query },
                success: function (response) {
                    $("#partialViewContainer").html(response); // Update the container with the partial view
                },
                error: function (error) {
                    console.error("Error:", error);
                }
            });


        }
    </script>

