@model IEnumerable<zBus.Models.Station>
@{
    ViewData["Title"] = "List of Stations";
}

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewData["Title"]</title>

    <style>
        /* */
    </style>    
</head>
<body>

    <div class="row">
        <div class="col-md-8 offset-md-2">
            <h1>List of Stations</h1>
            <table class="table">
                <thead>
                    <tr>
                        <th>Station Name</th>
                        <th>City</th>
                        <th>Address</th>
                        <th>Contact Number</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        @foreach (var station in Model)
                        {
                            <tr>
                                <td>@station.StationName</td>
                                <td>@station.StationCity</td>
                                <td>@station.StationAddress</td>
                                <td>@station.ContactNumber</td>
                                <td>
                                    <a class="btn btn-outline-primary" href="#"><i class="bi bi-pencil-square"></i>Edit</a> |
                                    <a class="btn btn-outline-info" href="#"><i class="bi bi-eye"></i>Details</a> |
                                    <a class="btn btn-danger text-white" href="#"><i class="bi bi-trash"></i>Delete</a>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="5">No stations found.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

</body>
</html>
