@model zBus.Models.Driver

@{
    ViewData["Title"] = "Add New Driver";
}

<style>
    .form-container {
        max-width: 500px;
        margin: 0 auto;
        padding: 20px;
        border: 1px solid #ccc;
        border-radius: 10px;
        background-color: #f9f9f9;
    }
</style>

<div class="container mt-5">
    @{
        //make a placeholder form that takes an image uploads it and updates the profilepicturepath
    
    }

    <h2 class="text-center">@ViewData["Title"]</h2>
    <div class="form-container">
        <form asp-action="upload" method="post" enctype="multipart/form-data">
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="ProfilePicturePath">Profile Picture:</label>
                        <input type="file" id="ProfilePicture" name="ProfilePicture" class="form-control-file" accept="image/*">
                        <span asp-validation-for="ProfilePicturePath" class="text-danger"></span>
                    </div>
                </div>
            </div>
        </form>
        <form asp-action="Create" method="post" enctype="multipart/form-data">
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="ProfilePicturePath">Profile Picture:</label>
                        <input type="text" id="ProfilePicture" name="ProfilePicture" class="form-control-file" accept="image/*">
                        <span asp-validation-for="ProfilePicturePath" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="FullName">Full Name:</label>
                        <input asp-for="FullName" class="form-control" required />
                        <span asp-validation-for="FullName" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Contact">Contact Number:</label>
                        <input asp-for="Contact" class="form-control" required />
                        <span asp-validation-for="Contact" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Age">Age:</label>
                        <input asp-for="Age" class="form-control" type="number" required />
                        <span asp-validation-for="Age" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="YearsOfExperience">Years of Experience:</label>
                        <input asp-for="YearsOfExperience" class="form-control" type="number" required />
                        <span asp-validation-for="YearsOfExperience" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-outline-success float-right" />
                <a asp-action="Index" class="btn btn-outline-primary float-right mr-2">Show All</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    <script>
        $("#ProfilePicture").on("change", function () {
            var input = this;
            if (input.files && input.files[0]) {
                var reader = new FileReader();
                reader.onload = function (e) {
                    $('#ProfilePicturePreview').attr('src', e.target.result);
                }
                reader.readAsDataURL(input.files[0]);
            }
        });
    </script>
}
