@model IEnumerable<Driver>

@{
    ViewData["Title"] = "List of Drivers";
}

<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewData["Title"]</title>

    <style>
        .table th, .table td {
            text-align: center;
        }

        .table img {
            width: 130px;
            height: 130px;
            object-fit: cover;
            border-radius: 50%; 
        }
    </style>
</head>


<div class="row">
    <div class="col-md-8 offset-md-2">
        <table class ="table">

            <thead>
                <tr class="text-center">
                    <th>@Html.DisplayNameFor(model=>model.ProfilePicturePath)</th>
                    <th>@Html.DisplayNameFor(model=>model.FullName)</th>
                    <th>Contact</th>
                    <th>@Html.DisplayNameFor(model=>model.Age)</th>
                    <th>@Html.DisplayNameFor(model=>model.YearsOfExperience)</th>
                    <th>Actions</th>
                </tr>
            </thead>

            <tbody>
                @if (Model!=null)
                {
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="align-middle">

                                <img class="rounded-circle" src="@item.ProfilePicturePath" alt="item.FullName" style="max-width: 150px" />


                            </td>
                            <td class="align-middle">
                            @Html.DisplayFor(modelItem =>item.FullName)
                            </td>

                            <td class="align-middle">
                            @Html.DisplayFor(modelItem =>item.Contact)
                            </td>
                            <td class="align-middle">
                                @Html.DisplayFor(modelItem =>item.Age)
                            </td>
                            <td class="align-middle">
                                @Html.DisplayFor(modelItem =>item.YearsOfExperience)
                            </td>
                            <td class="align-middle">
                            <a class="btn btn-outline-primary"><i class="bi bi-pencil-square"></i>Edit </a> |
                            <a class="btn btn-outline-info"><i class="bi bi-eye"></i>Details </a> |
                            <a class="btn btn-danger text-white"><i class="bi bi-trash"></i>Delete </a>
                            </td>
                    
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="6" class="text-center">
                            No Drivers Added to the System
                        </td>
                    </tr>
                }

            </tbody>

        </table>
    </div> 
</div>  

<div style="position: fixed; right:25px; bottom:50px;"  class="text-white" >
    <a asp-controller = "Driver" asp-action="Create" class="btn btn-outline-success"><i class="bi bi-plus-circle"></i>Add Driver</a>
</div>

